@using CM3070.DbModelCore
    
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    var health_region = new Dictionary<int, string>() { { 1, "Ontario" }, { 2, "Qubeac" }, { 3, "Alberta" }, { 4, "X" } };

    var gender = new Dictionary<int, string>() { { 1, "Male" }, { 2, "Female" }, { 3, "X" }, { 4, "Unknown" } };

    var address_type = new Dictionary<int, string>() { { 1, "Home" }, { 2, "business" } };

    var currentToken = "";


}

@model DemographicUpdate

<div id="wrap" class="px-1">

    <div ID="Content3">
        <form>
            <div class="row g-2">
                @if (Model != null)
                {
                     <!-- Left column --> 
                    <div class="col-md">
                        <div class="mb-1">
                            <label for="phn" class="col-form-label">Patient Number:</label>
                            <input type="text" class="form-control" id="txtPatientNumber" value="@Model.hin" disabled />
                        </div>
                        <div class="mb-1">
                            <label for="ver" class="col-form-label">Ver:</label>
                            <input type="text" class="form-control" id="txVer" value="@Model.ver" />
                        </div>
                        <div class="mb-1">
                            <label for="title" class="col-form-label">Title:</label>
                            <input type="text" class="form-control" id="txTitle" value="@Model.title" />                           
                        </div>
                        
                       
                       
                        <div class="mb-1">
                            <label for="postal" class="col-form-label">Postal:</label>
                            <input type="text" class="form-control" id="txtPostal" value="@Model.postal">
                        </div>

                        <div class="mb-1">
                            <label for="email" class="col-form-label">Email:</label>
                            <input type="text" class="form-control" id="txtEmail" value="@Model.email">
                        </div>

                        <div class="mb-1">
                            <label for="family_doctor" class="col-form-label">Family Doctor:</label>
                            <input type="text" class="form-control" id="txtFamilyDoctor" value="@Model.family_doctor">
                        </div>

                    </div>
                    @*  Middle column *@
                    <div class="col-md">

                        <div class="mb-1">
                            <label for="first_name" class="col-form-label">First Name:</label>
                            <input type="text" class="form-control" id="txtFirstName" value="@Model.first_name">
                        </div>

                        <div class="mb-1">
                            <label for="DOB" class="col-form-label">DOB:</label>
                            <input type="text" class="form-control" id="txtDOB" value="@Model.year_of_birth">
                        </div>
                        <div class="mb-1">
                            <label for="suffix" class="col-form-label">Suffix:</label>
                            <input type="text" class="form-control" id="txtSuffix" value="@Model.suffix">
                        </div>

                        <div class="mb-1">
                            <label for="city" class="col-form-label">city:</label>
                            <input type="text" class="form-control" id="txtCity" value="@Model.city">
                        </div>

                        <div class="mb-1">
                            <label for="phone" class="col-form-label">Phone:</label>
                            <input type="text" class="form-control" id="txtPhone" value="@Model.phone">
                        </div>

                        <div class="mb-1 ">
                            <label for="provider_no" class="col-form-label">Provider No:</label>
                            <input type="text" class="form-control" id="txtPhone2" value="@Model.provider_no">
                        </div>               





                    </div>
                    @*  <!-- Left column --> *@
                    <div class="col-md">


                        <div class="mb-1 ">
                            <label for="last_name" class="col-form-label">Last Name:</label>
                            <input type="text" class="form-control" id="txtLastName" value="@Model.first_name">
                        </div>
                        <div class="mb-1 ">
                            <div class="col-3">
                                <label class="col-form-label px-2"> Gender </label>
                            </div>
                            <div class="col-8">
                                <div>
                                    <select class="form-control" name="ddlGender2" id="ddlGender2">
                                        <option value="" selected disabled>Select Gender</option>
                                        @foreach (var item in gender)
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-1">
                            <label for="addrss" class="col-form-label">Addess:</label>
                            <input type="text" class="form-control" id="txtAddress" value="@Model.address">
                        </div>

                        <div class="mb-1 ">
                            <div class="d-flex flex col-1">
                                <label class="col-form-label">City</label>
                            </div>
                            <div class="d-flex flex col-10">
                                <input class="form-control bg-warning bg-opacity-10" name="txtCity" type="text" id="txtCity" tabindex="0" />
                                <div class="col-5">
                                    <select class="form-control" name="ddlProv2" id="ddlProv2">
                                        <option value="" selected disabled>Select Prov</option>
                                        @foreach (var item in health_region)
                                        {
                                            <option value="@item.Key">@item.Value</option>
                                        }
                                    </select>
                                </div>


                            </div>
                        </div>

                        <div class="mb-1 ">
                            <label for="phone2" class="col-form-label">Phone2:</label>
                            <input type="text" class="form-control" id="txtPhone2" value="@Model.phone2">
                        </div>
                       
                      

                    </div>                    
                    

                }
            </div>
        </form>
    </div>
</div>