@{
}

<div class="d-flex flex-row">

    <label class="col-form-label"> Patient </label>
    <label class="col-form-label px-5" type="text" id="pname"> @Model.demographic_no </label>
    <label class="col-form-label"> Created By </label>
    <label class="col-form-label px-2" type="text" id="createdBy"> @Model.created_by</label>
</div>

<div class="d-flex flex-row">
    <label class="col-form-label"> Due Date </label>
    <label class="col-form-label px-5" id="dueDate"> @Model.due_date</label>
    <label class="col-form-label"> Priority </label>
    <label class="col-form-label px-2" id="priority"> @Model.priority_id</label>
</div>
<label class="col-form-label"> Notes </label>
<textarea class="form-control bg-warning bg-opacity-10" id="notes" rows="10"> @Model.notes</textarea>

